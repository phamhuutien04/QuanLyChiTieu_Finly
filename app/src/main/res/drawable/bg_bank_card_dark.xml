<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient fintech xanh tím -->
    <gradient
        android:startColor="#1E2A78"
        android:centerColor="#3B4CCA"
        android:endColor="#512DA8"
        android:angle="45" />

    <!-- Bo góc -->
    <corners
        android:radius="16dp" />

    <!-- Viền mảnh cho cảm giác nổi -->
    <stroke
        android:width="1dp"
        android:color="#4E5AFF" />

    <!-- Shadow nhẹ (để app có chiều sâu) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape>
