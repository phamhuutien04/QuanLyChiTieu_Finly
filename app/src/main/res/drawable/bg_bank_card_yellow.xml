<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NỀN THẺ: vàng + bo góc + viền mờ nhẹ -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2C94C"/>  <!-- vàng -->
            <corners android:radius="20dp"/>
            <stroke android:width="1dp" android:color="#14FFFFFF"/>
        </shape>
    </item>

    <!-- DẢI ĐEN (nằm sau header, cao 28dp) -->
    <!-- Layout của bạn có padding 24dp; đặt top=8dp để dải đen nằm ở vùng header, không che số dư -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="8dp">
        <shape android:shape="rectangle">
            <size android:height="28dp"/>
            <solid android:color="#222222"/>
        </shape>
    </item>

    <!-- LOGO 2 HÌNH TRÒN (góc phải dưới, chừa 24dp mép) -->
    <!-- Tròn xanh đậm (nằm dưới) -->
    <item
        android:gravity="bottom|end"
        android:right="56dp"
        android:bottom="24dp">
        <shape android:shape="oval">
            <size android:width="28dp" android:height="28dp"/>
            <solid android:color="#2C3E50"/>
        </shape>
    </item>

    <!-- Tròn đỏ (chồng lên bên phải) -->


</layer-list>
