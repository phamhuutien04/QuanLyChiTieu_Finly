<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền tối rất nhẹ để chữ nổi -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0B1023"/> <!-- deep navy backdrop -->
        </shape>
    </item>

    <!-- Dải gradient chéo xanh dương -> cyan -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#1A3B82F6"
            android:centerColor="#1A22D3EE"
            android:endColor="#1A6366F1"
            android:angle="315"/>
        </shape>
    </item>

    <!-- Vệt sáng tròn (mesh blob 1) -->
    <item android:gravity="top|start">
        <shape android:shape="oval">
            <size android:width="480dp" android:height="480dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="280dp"
                android:centerX="0.3"
                android:centerY="0.2"
                android:startColor="#5538BDF8"
            android:endColor="#00000000"/>
        </shape>
    </item>

    <!-- Vệt sáng tròn (mesh blob 2) -->
    <item android:gravity="bottom|end">
        <shape android:shape="oval">
            <size android:width="520dp" android:height="520dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="320dp"
                android:centerX="0.7"
                android:centerY="0.85"
                android:startColor="#5522D3EE"
            android:endColor="#00000000"/>
        </shape>
    </item>
</layer-list>
