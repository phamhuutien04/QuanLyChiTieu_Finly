<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_chevron_right"
                android:rotation="180"
                app:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trang cá nhân"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_settings"
                app:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <!-- Profile Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Avatar + Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:id="@+id/imgProfileAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user_placeholder"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvProfileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên người dùng"
                            android:textSize="22sp"
                            android:textColor="#1F2937"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvProfileBio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chưa có mô tả"
                            android:textSize="14sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:tint="#9CA3AF"/>

                            <TextView
                                android:id="@+id/tvProfileLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Không rõ"
                                android:textSize="12sp"
                                android:textColor="#9CA3AF"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnEditProfile"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"

                        app:tint="#3B82F6"
                        android:background="@drawable/bg_color_circle"
                        android:backgroundTint="#DBEAFE"/>
                </LinearLayout>

                <!-- Nút kết bạn + nhắn tin -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:id="@+id/btnAddFriend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Kết bạn"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_btn_blue"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/btnMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Nhắn tin"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_btn_green"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_tab_menu">

            <TextView
                android:id="@+id/tabPosts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bài viết"
                android:padding="12dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_tab_selected"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tabGoals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mục tiêu"
                android:padding="12dp"
                android:textColor="#9CA3AF"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tabActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hoạt động"
                android:padding="12dp"
                android:textColor="#9CA3AF"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Section Posts -->


        <!-- Floating Add Post -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fabNewPost"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="6dp"
            android:backgroundTint="#3B82F6">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add"
                app:tint="#FFFFFF"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
