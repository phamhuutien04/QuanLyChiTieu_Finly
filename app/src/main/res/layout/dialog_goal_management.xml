<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goal_manage_title"
                        android:textSize="24sp"
                        android:textColor="#1F2937"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goal_manage_sub"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#6B7280"/>
            </RelativeLayout>

            <!-- Quick Presets -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal_quick_presets"
                android:textSize="16sp"
                android:textColor="#1F2937"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:weightSum="3">

                <!-- Conservative Preset -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPresetLow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F0FDF4"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ±"
                            android:textSize="24sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_preset_low"
                            android:textSize="12sp"
                            android:textColor="#10B981"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_preset_low_value"
                            android:textSize="11sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Moderate Preset -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPresetMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#EFF6FF"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš–ï¸"
                            android:textSize="24sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_preset_medium"
                            android:textSize="12sp"
                            android:textColor="#3B82F6"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_preset_medium_value"
                            android:textSize="11sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Aggressive Preset -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPresetHigh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FEF3C7"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸš€"
                            android:textSize="24sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_preset_high"
                            android:textSize="12sp"
                            android:textColor="#F59E0B"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_preset_high_value"
                            android:textSize="11sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Smart Suggestion Banner -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSmartSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F3E8FF"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ¨"
                        android:textSize="24sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_smart_title"
                            android:textSize="14sp"
                            android:textColor="#7C3AED"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_smart_sub"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar"
                        app:tint="#7C3AED"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Goal Inputs -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal_spend_title"
                android:textSize="16sp"
                android:textColor="#1F2937"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- DAILY -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/goal_daily"
                app:placeholderText="@string/goal_daily_placeholder"
                app:placeholderTextColor="#9CA3AF"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeColor="#3B82F6"
                app:hintTextColor="#3B82F6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDailyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- MONTHLY -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/goal_monthly"
                app:placeholderText="@string/goal_monthly_placeholder"
                app:placeholderTextColor="#9CA3AF"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeColor="#3B82F6"
                app:hintTextColor="#3B82F6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMonthlyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- YEARLY -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="@string/goal_yearly"
                app:placeholderText="@string/goal_yearly_placeholder"
                app:placeholderTextColor="#9CA3AF"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeColor="#3B82F6"
                app:hintTextColor="#3B82F6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etYearlyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:padding="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Notifications -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal_notif_title"
                android:textSize="16sp"
                android:textColor="#1F2937"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F9FAFB">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Switch Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/goal_notif_enable"
                                android:textSize="14sp"
                                android:textColor="#1F2937"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/goal_notif_sub"
                                android:textSize="12sp"
                                android:textColor="#6B7280"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <Switch
                            android:id="@+id/switchNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E7EB"
                        android:layout_marginVertical="16dp"/>

                    <!-- Threshold -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/goal_threshold"
                            android:textSize="14sp"
                            android:textColor="#1F2937"/>

                        <TextView
                            android:id="@+id/tvThresholdValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80%"
                            android:textSize="14sp"
                            android:textColor="#3B82F6"
                            android:textStyle="bold"
                            android:minWidth="48dp"
                            android:gravity="end"/>
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekbarThreshold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="80"
                        android:progressTint="#3B82F6"
                        android:thumbTint="#3B82F6"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0%"
                            android:textSize="11sp"
                            android:textColor="#9CA3AF"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="50%"
                            android:textSize="11sp"
                            android:textColor="#9CA3AF"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="100%"
                            android:textSize="11sp"
                            android:textColor="#9CA3AF"
                            android:gravity="end"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/cancel"
                    android:textSize="16sp"
                    android:textColor="#6B7280"
                    android:background="@drawable/bg_button_outline"
                    android:fontFamily="sans-serif-medium"/>

                <Button
                    android:id="@+id/btnSaveGoal"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/save_goal"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_primary"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Tips -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FEF3C7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/goal_tip"
                        android:textSize="12sp"
                        android:textColor="#92400E"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
