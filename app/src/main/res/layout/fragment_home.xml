<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/okla">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="28dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="8dp">

                <!-- Avatar tròn bên phải -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAvatar"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="3dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_manage"
                        android:contentDescription="@string/app_name"
                        android:background="#667EEA"
                        android:padding="12dp"
                        app:tint="#FFFFFF"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tên người dùng (đậm, lớn) - ĐÃ ĐIỀU CHỈNH CONSTRAINT -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="NameUser"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardAvatar"
                    app:layout_constraintTop_toTopOf="@id/cardAvatar"
                    app:layout_constraintHorizontal_bias="0"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Ngày dạng "chip"/badge ở dưới cùng bên trái - ĐÃ ĐIỀU CHỈNH CONSTRAINT -->
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thứ Năm, 18 tháng 09 2025"
                    android:textSize="12sp"
                    android:textColor="#E6FFFFFF"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/bg_date_chip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- Balance Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp">

                <!-- Thẻ ngân hàng tối -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bank_card_dark"
                    android:padding="20dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_dialog_info"
                                android:alpha="0.85"
                                app:tint="#E5E7EB"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số dư hiện tại"
                                android:textColor="#F5F5F5"
                                android:textSize="14sp"
                                android:alpha="0.92"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <!-- Số dư -->
                        <TextView
                            android:id="@+id/tvBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.618.000 đ"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:letterSpacing="0.02"
                            android:layout_marginBottom="12dp"/>

                        <!-- Dòng kẻ + 2 chấm trên dòng kẻ -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginBottom="12dp">

                            <!-- Dòng kẻ nằm giữa -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:background="#FFFFFF"
                                android:alpha="0.12"/>

                            <!-- Hai chấm tròn (nằm trên dòng kẻ, canh phải) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="end|center_vertical"
                                android:paddingEnd="6dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/circle_blue_dark"/>

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/circle_red_dark"
                                    android:layout_marginStart="-10dp"/>
                            </LinearLayout>
                        </FrameLayout>

                        <!-- Thu nhập / Chi tiêu -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <!-- Thu nhập -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@android:drawable/arrow_down_float"
                                        app:tint="#22C55E"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Thu nhập"
                                        android:textSize="12sp"
                                        android:textColor="#E5E7EB"
                                        android:alpha="0.9"
                                        android:layout_marginStart="6dp"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvIncome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8.394.000 đ"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <!-- Chi tiêu -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="end">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@android:drawable/arrow_up_float"
                                        app:tint="#EF4444"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Chi tiêu"
                                        android:textSize="12sp"
                                        android:textColor="#E5E7EB"
                                        android:alpha="0.9"
                                        android:layout_marginStart="6dp"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvExpense"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1.776.000 đ"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="24dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/add_income_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#E8F5E9"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/arrow_down_float"
                            app:tint="#4CAF50" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thu nhập"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/add_expense_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="#FFEBEE">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/arrow_up_float"
                            app:tint="#FF5252" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chi tiêu"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnReports"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="#E3F2FD">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_report_image"
                            app:tint="#2196F3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Báo cáo"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Transaction List Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giao dịch gần đây"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FBFBFB"/>

                <TextView
                    android:id="@+id/tvTransactionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 giao dịch"
                    android:textSize="13sp"
                    android:textColor="#FBFBFB"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="80dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransactions"
                    android:background="#1A1D2E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:padding="4dp"
                    android:minHeight="200dp"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
