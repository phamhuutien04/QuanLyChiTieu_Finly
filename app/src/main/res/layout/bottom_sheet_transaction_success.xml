<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundGravity="center">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- ICON CHECK -->
        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/check"
            android:layout_marginTop="4dp"
            android:contentDescription="@null" />

        <!-- TIÊU ĐỀ -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã lưu giao dịch"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:layout_marginTop="10dp" />

        <!-- SỐ TIỀN -->
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.500.000 đ"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary_blue"
            android:layout_marginTop="6dp" />

        <!-- LOẠI + DANH MỤC -->
        <TextView
            android:id="@+id/tvTypeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiêu • Ăn uống"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <!-- NGÀY GIỜ -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lúc 20/11/2025 14:35"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:textColor="#777777"
            android:layout_marginTop="2dp" />

        <!-- GHI CHÚ -->
        <TextView
            android:id="@+id/tvNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú: Cà phê với bạn"
            android:textSize="13sp"
            android:textColor="#777777"
            android:fontFamily="sans-serif"
            android:layout_marginTop="6dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:background="#E0E0E0" />

        <!-- HÀNG NÚT 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Nút Thêm nữa -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddAnother"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm nữa"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                app:strokeColor="@color/primary_blue"
                app:strokeWidth="1dp"
                android:textColor="@color/primary_blue" />

            <!-- Nút Xem tất cả -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem tất cả"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/primary_blue" />
        </LinearLayout>

        <!-- NÚT ĐÓNG -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="10dp"
            style="@style/Widget.Material3.Button.TextButton"
            android:textColor="@color/primary_blue" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

    </FrameLayout>
