                            android:padding="12dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tá»•ng chi"
                                android:textSize="12sp"
