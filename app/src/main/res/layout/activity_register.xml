<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adidaphat">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- Panel form -->
            <LinearLayout
                android:id="@+id/registerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="480dp"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/card_container"
                android:elevation="8dp">

                <!-- Icon / Banner -->
                <ImageView
                    android:id="@+id/imgBanner"
                    android:layout_width="110dp"
                    android:layout_height="107dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/register_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/login" />

                <!-- Tiêu đề -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/register_button"
                    android:textColor="#2C3E50"
                    android:textSize="27sp"
                    android:textStyle="bold" />

                <!-- USERNAME -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người dùng"
                    android:textColor="#475569"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#2563EB"
                        app:srcCompat="@drawable/ic_user"/>

                    <EditText
                        android:id="@+id/edtUsername"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="textPersonName"
                        android:hint="Nhập tên người dùng"
                        android:textStyle="bold"
                        android:textColor="#0F172A"
                        android:textColorHint="#94A3B8"
                        android:background="@android:color/transparent"
                        android:paddingStart="10dp"
                        android:textSize="16sp"/>
                </LinearLayout>


                <!-- EMAIL (giống trang login) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_hint"
                    android:textColor="#475569"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#2563EB"
                        app:srcCompat="@drawable/ic_email"/>

                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="textEmailAddress"
                        android:hint="@string/email_hint"
                        android:textStyle="bold"
                        android:textColor="#0F172A"
                        android:textColorHint="#94A3B8"
                        android:background="@android:color/transparent"
                        android:paddingStart="10dp"
                        android:textSize="16sp"/>
                </LinearLayout>


                <!-- MẬT KHẨU -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_hint"
                    android:textColor="#475569"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#2563EB"
                        app:srcCompat="@drawable/ic_lock_24"/>

                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="textPassword"
                        android:hint="@string/password_hint"
                        android:textColor="#0F172A"
                        android:textStyle="bold"
                        android:textColorHint="#94A3B8"
                        android:background="@android:color/transparent"
                        android:paddingStart="10dp"
                        android:textSize="16sp"/>
                </LinearLayout>


                <!-- XÁC NHẬN MẬT KHẨU -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận mật khẩu"
                    android:textColor="#475569"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_bg"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="#2563EB"
                        app:srcCompat="@drawable/ic_lock_24"/>

                    <EditText
                        android:id="@+id/edtConfirmPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="textPassword"
                        android:hint="Nhập lại mật khẩu"
                        android:textColor="#0F172A"
                        android:textStyle="bold"
                        android:textColorHint="#94A3B8"
                        android:background="@android:color/transparent"
                        android:paddingStart="10dp"
                        android:textSize="16sp"/>
                </LinearLayout>


                <!-- Khối yêu cầu mật khẩu -->
                <include
                    android:id="@+id/pwdRequirements"
                    layout="@layout/view_password_requirements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- Nút đăng ký -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/register_button"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_primary_blue"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp"
                    android:elevation="4dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>

            <!-- Link chuyển sang đăng nhập -->
            <TextView
                android:id="@+id/txtGoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="@string/already_have_accountt"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>