<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Card container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Icon với background gradient -->
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_background_gradient"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:contentDescription="Reset Password"
                            app:tint="#FFFFFF"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tiêu đề -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đặt lại mật khẩu"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:layout_marginBottom="8dp"/>

                <!-- Mô tả -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhập mật khẩu mới của bạn"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"/>

                <!-- Mật khẩu mới -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu mới"
                    app:startIconTint="#5E35B1"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#5E35B1"
                    app:boxStrokeColor="#5E35B1"
                    app:hintTextColor="#5E35B1"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Xác nhận mật khẩu mới -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Xác nhận mật khẩu mới"
                    app:startIconTint="#5E35B1"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#5E35B1"
                    app:boxStrokeColor="#5E35B1"
                    app:hintTextColor="#5E35B1"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Yêu cầu mật khẩu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F5F5F5"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mật khẩu phải có:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvMinLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Ít nhất 8 ký tự"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:drawablePadding="4dp"/>

                    <TextView
                        android:id="@+id/tvHasNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Ít nhất 1 số"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:drawablePadding="4dp"/>

                    <TextView
                        android:id="@+id/tvHasUpperCase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Ít nhất 1 chữ hoa"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:drawablePadding="4dp"/>
                </LinearLayout>

                <!-- Nút xác nhận -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConfirmReset"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Xác nhận đổi mật khẩu"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:background="@drawable/btn_primary_blue"
                    app:backgroundTint="@null"
                    app:useMaterialThemeColors="false"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textStart"
                    app:iconTint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Nút hủy -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Hủy"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#5E35B1"
                    app:strokeWidth="2dp"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel"
                    app:iconGravity="textStart"
                    app:iconTint="#5E35B1"
                    android:textColor="#5E35B1"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>